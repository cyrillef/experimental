{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch-ts",
			"type": "shell",
			"command": "tsc -w",
			"options": {
				"cwd": "${workspaceFolder}/src/server",
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$tsc-watch"],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},

        {
            "label": "show_filename",
            "type": "shell",
            "command": "echo \"File: ${file}\""
        },

	]
}